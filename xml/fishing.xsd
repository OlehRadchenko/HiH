<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:element name="wedkarstwo" type="wedkarstwoType"/>

    <xs:complexType name="wedkarstwoType">
        <xs:sequence>
            <xs:element name="wedkarze" type="wedkarzeType" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="wedkarzeType">
        <xs:sequence>
            <xs:element name="wedkarz" type="wedkarzType" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute name="kraj" type="xs:string" use="required"/>
        <xs:attribute name="rok" type="xs:gYear" use="required"/>
        <xs:attribute name="liczba" type="xs:positiveInteger" use="required"/>
    </xs:complexType>
</xs:schema>

